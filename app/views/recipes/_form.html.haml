= form_for @recipe do |f|
  - if @recipe.errors.any?
    %h2= pluralize(@recipe.errors.count, 'error')
    %ul
      - @recipe.errors.full_messages.each do |msg|
        %li= msg
  .content_form
    = f.label :title
    .input-group-lg
      = f.text_field :title, class: "form-control", placeholder: 'Titulo'
    = f.label :description
    .input-group-lg
      = f.text_area :description, class: "form-control", placeholder: 'Url'
    .input-group
      = f.file_field :image, input_html: { class: 'form-control' }
  .row
    .col-md-6
      %h3 Ingredients
      #ingredients
        .links
          = link_to_add_association 'Add Question', f, :ingredients, partial: 'ingredient_fields', class: "btn btn-default add-button"
    .col-md-6
      %h3 Directions
      #directions
        .links
          = link_to_add_association 'Add Direction', f, :directions, partial: 'direction_fields', class: "btn btn-default add-button"
      = f.submit