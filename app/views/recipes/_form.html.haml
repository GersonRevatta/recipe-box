= form_for @recipe do |f|
  - if @recipe.errors.any?
    %h2= pluralize(@recipe.errors.count, 'error')
    %ul
      - @recipe.errors.full_messages.each do |msg|
        %li= msg
  .content_form
    = f.label :title
    .input-group-lg
      = f.text_field :title, class: "form-control", placeholder: 'Titulo'
    = f.label :description
    .input-group-lg
      = f.text_area :description, class: "form-control", placeholder: 'Url'
    .input-group
      = f.file_field :image, input_html: { class: 'form-control' }  
    %p
      = f.submit
